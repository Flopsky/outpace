# Build stage
FROM node:18 as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Production stage
FROM node:18-alpine
WORKDIR /app
COPY --from=build /app/build ./
COPY package*.json ./
RUN npm install --only=production

ENV REACT_APP_CLIENT_ID=$REACT_APP_CLIENT_ID
ENV REACT_APP_CLIENT_SECRET=$REACT_APP_CLIENT_SECRET
ENV REACT_APP_HOST_URL=$REACT_APP_HOST_URL
ENV REACT_APP_MAPBOX_ACCESS_TOKEN=$REACT_APP_MAPBOX_ACCESS_TOKEN
ENV REACT_APP_SYNCFUSION_ACCESS_TOKEN=$REACT_APP_SYNCFUSION_ACCESS_TOKEN
ENV REACT_APP_WEB_URL=$REACT_APP_WEB_URL

EXPOSE 3000
CMD ["npm", "run", "serve"]
